<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mkworld29.mobile.com.cafemoa.FirstSignUpActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:src="@drawable/sign_up_app_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="계정 만들기"
        android:textSize="40sp"
        android:textColor="#0c0c0c"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_marginLeft="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#0c0c0c"
                android:textSize="20sp"
                android:text="전화번호"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0c0c0c"
                android:textSize="20sp"
                android:text="를 입력하세요."/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:gravity="center"
            android:id="@+id/edt_number_1"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:textSize="23sp"
            android:inputType="number"
            android:maxLength="1"
            android:background="#e5e5e5"/>

            <EditText
                android:gravity="center"
                android:id="@+id/edt_number_2"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:textSize="23sp"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="5dp"
                android:background="#e5e5e5"/>

            <EditText
                android:gravity="center"
                android:id="@+id/edt_number_3"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:textSize="23sp"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="5dp"
                android:background="#e5e5e5"/>
            <EditText
                android:gravity="center"
                android:id="@+id/edt_number_4"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:textSize="23sp"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="5dp"
                android:background="#e5e5e5"/>
            <EditText
                android:gravity="center"
                android:id="@+id/edt_number_5"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:textSize="23sp"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="25dp"
                android:background="#e5e5e5"/>
            <EditText
                android:gravity="center"
                android:id="@+id/edt_number_6"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:textSize="23sp"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="5dp"
                android:background="#e5e5e5"/>
            <EditText
                android:gravity="center"
                android:id="@+id/edt_number_7"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:textSize="23sp"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="5dp"
                android:background="#e5e5e5"/>
            <EditText
                android:gravity="center"
                android:id="@+id/edt_number_8"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:textSize="23sp"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="5dp"
                android:background="#e5e5e5"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:background="@drawable/btn_sign_up"
            android:textColor="#fcfcfc"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="다음"/>


    </LinearLayout>


</LinearLayout>
