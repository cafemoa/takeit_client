<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        card_view:cardElevation="0dp"
        android:id="@+id/main_cafe_cardview">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/main_cafe_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:id="@+id/main_cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/main_is_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/main_cafe_name"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:text="영업 시간이 아닙니다"
            android:textStyle="bold"
            android:textColor="#f58941"
            />
        <TextView
            android:id="@+id/main_cafe_location"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_cafe_name"
            android:textSize="17sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/main_cafe_tag"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"

            android:layout_below="@id/main_cafe_location"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ababab"

            android:textSize="14sp"
            />
    </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_wall"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:background="#9c9c9c9c"
        android:src="#9c9c9c9c"
        android:layout_margin="10dp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ly_wall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/owner"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/ready"/>

    </LinearLayout>

</RelativeLayout>