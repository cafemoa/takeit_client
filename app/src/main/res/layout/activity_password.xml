<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mkworld29.mobile.com.cafemoa.LoginActivity"
    >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="29dp"
            android:src="@drawable/login_back"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="22.3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_back" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/decoration"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19.3dp"
        android:id="@+id/imageView4" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="비밀번호 변경"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />



    <LinearLayout
        android:layout_marginTop="38.3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:layout_below="@id/tv_login"

        android:layout_weight="5"
        android:id="@+id/linearLayout">

        <!--android:background="@drawable/email_edit_text_border"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_now_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            />
            <TextView
                android:layout_toRightOf="@id/tv_now_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text=" 비밀번호"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/iv_password_confirm"
                android:layout_width="16dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"


                android:src="@drawable/password_confirm"
                />
        </RelativeLayout>

    <EditText
        android:id="@+id/et_now_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text=" 비밀번호"
                android:textSize="20sp"
                />
        </LinearLayout>

    <EditText
        android:id="@+id/et_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text=" 비밀번호 확인"
                android:textSize="20sp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/et_change_passwordCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            />

    </LinearLayout>
</RelativeLayout>
